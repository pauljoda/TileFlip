<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/DayBackground"
                android:animateLayoutChanges="true"
                android:id="@+id/main_menu_root"
        >

    <com.google.android.gms.ads.AdView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_menu_ad"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:adUnitId="ca-app-pub-5753646547278770/8285827648"
            tools:adSize="SMART_BANNER"
            android:background="@color/grey_800"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tile Flip"
            android:textSize="50sp"
            android:textColor="@color/primary_dark_material_dark"
            android:id="@+id/title"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

    <davis.tileflip.customviews.TileButton
            android:layout_width="200dp"
            android:text="Play"
            android:textSize="35sp"
            android:layout_height="50dp"
            android:background="@drawable/blue_button"
            tools:backgroundDrawable="@drawable/red_tile"
            android:id="@+id/playButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@drawable/common_signin_btn_icon_focus_dark"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

</RelativeLayout>